doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title #{title}
    link(rel="stylesheet", href="/css/main.css")
  body 
    header.main-header 
      nav 
        ul 
          li 
            a(href="/") Shop
          li 
            a(href="/admin/add-product") Add product

    main 
      h1 My products
      if products.length > 0
        each product in products
          p #{product.title}
      else
        h1 No products